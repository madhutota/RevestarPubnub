<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spaceLR"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/space10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space10"
            android:drawablePadding="@dimen/space5"
            android:text="5:04pm"
            android:textColor="@color/txt_in_time"
            android:textSize="@dimen/h4" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_me">
            <ImageView
                android:id="@+id/iv_media_out"
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:padding="@dimen/space10"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:src="@drawable/userpic" />
            <TextView
                android:id="@+id/tv_chat_text_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space10"
                android:text="Hi, joe how are you, do you like to join our party in next week because you don't like party?"
                android:textColor="@color/txt_in_message"
                android:textSize="@dimen/h3"

                />


        </FrameLayout>

    </LinearLayout>
</RelativeLayout>